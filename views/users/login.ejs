<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
  <h1 class="col-6 offset-3 text-center">Login for Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" class="form-control" type="text" required />
        
      </div>

      
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" class="form-control" type="password" required />
      </div>

      <button class="btn btn-dark mt-3" type="submit">Login</button>
    </form>
  </div>
</div>
